<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:layout_weight="1"
                    android:layout_marginRight="50pt"
                    android:src="@drawable/logo_learniverse_hori" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="20pt"
                    android:layout_weight="1"
                    android:src="@drawable/profile_pic" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LearningAdventure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:text="Learning Adventure"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="75pt"
                        android:layout_height="100pt"
                        android:layout_marginLeft="10pt"
                        android:layout_marginRight="5pt"
                        android:layout_marginVertical="5pt"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/boxSR"
                            android:layout_width="75pt"
                            android:layout_height="100pt"
                            android:background="@drawable/rounded_border"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/StoryIllus"
                                android:layout_width="wrap_content"
                                android:layout_height="30pt"
                                android:layout_gravity="center"
                                android:src="@drawable/illus_story_reading" />

                            <TextView
                                android:id="@+id/StoryReading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5pt"
                                android:layout_marginHorizontal="5pt"
                                android:text="Story Reading"
                                android:textAlignment="center"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/DesStory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5pt"
                                android:layout_marginBottom="5pt"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                                android:textAlignment="center"
                                android:textSize="5pt" />

                            <Button
                                android:id="@+id/startStory"
                                android:layout_width="50pt"
                                android:layout_height="18pt"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/green"
                                android:text="START"
                                android:layout_marginBottom="2pt"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="75pt"
                        android:layout_height="100pt"
                        android:layout_marginLeft="3pt"
                        android:layout_marginRight="5pt"
                        android:layout_marginVertical="5pt"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:id="@+id/boxVC"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_border"
                            android:orientation="vertical"
                            android:gravity="center" >

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="30pt"
                                android:layout_gravity="center"
                                android:src="@drawable/illus_vocab_card" />

                            <TextView
                                android:id="@+id/VocabCards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5pt"
                                android:layout_marginTop="5pt"
                                android:text="Vocab Cards"
                                android:textAlignment="center"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/DescVocab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5pt"
                                android:layout_marginBottom="5pt"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                                android:textAlignment="center"
                                android:textSize="5pt" />

                            <Button
                                android:id="@+id/startVocab"
                                android:layout_width="50pt"
                                android:layout_height="18pt"
                                android:layout_marginBottom="2pt"
                                android:layout_gravity="center"
                                android:backgroundTint="#7F9B8C"
                                android:text="START"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/QuizQuests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:textAlignment="center"
                android:text="Quiz Quests" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="75pt"
                    android:layout_height="100pt"
                    android:layout_marginLeft="10pt"
                    android:layout_marginRight="5pt"
                    android:layout_marginVertical="5pt"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/boxSP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_border"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="30pt"
                            android:layout_gravity="center"
                            android:src="@drawable/illus_sentence_puzzle" />

                        <TextView
                            android:id="@+id/AlphabetPuzzle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="Sentence Puzzle" />

                        <TextView
                            android:id="@+id/DesAlphabet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="5pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:layout_marginBottom="5pt"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

                        <Button
                            android:id="@+id/startAlphabet"
                            android:layout_width="50pt"
                            android:layout_height="18pt"
                            android:layout_marginBottom="2pt"
                            android:text="START"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="#7F9B8C"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75pt"
                    android:layout_height="100pt"
                    android:layout_marginLeft="3pt"
                    android:layout_marginRight="5pt"
                    android:layout_marginVertical="5pt"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/boxET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_border"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="30pt"
                            android:layout_gravity="center"
                            android:src="@drawable/illus_evaluation_test" />

                        <TextView
                            android:id="@+id/guessingGame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="Guessing Game" />

                        <TextView
                            android:id="@+id/DescEvaluation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="5pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:layout_marginBottom="5pt"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

                        <Button
                            android:id="@+id/startGuessingGame"
                            android:layout_width="50pt"
                            android:layout_height="18pt"
                            android:layout_marginBottom="2pt"
                            android:text="START"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:backgroundTint="#7F9B8C"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>