<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_home">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LogoHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8pt"
                android:textSize="16pt"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Learniverse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LearningAdventure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5pt"
                    android:paddingLeft="10pt"
                    android:text="Learning Adventure"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="80pt"
                        android:layout_height="100pt"
                        android:layout_marginLeft="10pt"
                        android:layout_marginRight="5pt"
                        android:layout_marginVertical="5pt"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_border"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/LvStory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5pt"
                                android:text="Level X"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/StoryReading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5pt"
                                android:layout_marginTop="35pt"
                                android:text="Story Reading"
                                android:textAlignment="center"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/DesStory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5pt"
                                android:layout_marginBottom="5pt"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                                android:textAlignment="center"
                                android:textSize="5pt" />

                            <Button
                                android:id="@+id/StartStory"
                                android:layout_width="50pt"
                                android:layout_height="18pt"
                                android:layout_gravity="center"
                                android:backgroundTint="#F58A82"
                                android:text="START"
                                android:layout_marginBottom="2pt"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80pt"
                        android:layout_height="100pt"
                        android:layout_marginLeft="5pt"
                        android:layout_marginRight="5pt"
                        android:layout_marginVertical="5pt"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_border"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/LvVocab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5pt"
                                android:text="Level X"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/VocabCards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5pt"
                                android:layout_marginTop="35pt"
                                android:text="Vocab Cards"
                                android:textAlignment="center"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/DescVocab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5pt"
                                android:layout_marginBottom="5pt"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                                android:textAlignment="center"
                                android:textSize="5pt" />

                            <Button
                                android:id="@+id/StartVocab"
                                android:layout_width="50pt"
                                android:layout_height="18pt"
                                android:layout_marginBottom="2pt"
                                android:layout_gravity="center"
                                android:backgroundTint="#F58A82"
                                android:text="START"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/QuizQuests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:paddingLeft="10pt"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:text="Quiz Quests" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80pt"
                    android:layout_height="100pt"
                    android:layout_marginLeft="10pt"
                    android:layout_marginRight="5pt"
                    android:layout_marginVertical="5pt"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/LvAlphabet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5pt"
                            android:textAlignment="center"
                            android:text="Level X" />

                        <TextView
                            android:id="@+id/AlphabetPuzzle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="Alphabet Puzzle" />

                        <TextView
                            android:id="@+id/DesAlphabet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="5pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:layout_marginBottom="5pt"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

                        <Button
                            android:id="@+id/StartAlphabet"
                            android:layout_width="50pt"
                            android:layout_height="18pt"
                            android:layout_marginBottom="2pt"
                            android:text="START"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:backgroundTint="#F58A82"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="80pt"
                    android:layout_height="100pt"
                    android:layout_marginLeft="5pt"
                    android:layout_marginRight="5pt"
                    android:layout_marginVertical="5pt"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/LvEvaluation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5pt"
                            android:textAlignment="center"
                            android:text="Level X" />

                        <TextView
                            android:id="@+id/EvaluationTest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="Evaluation Test" />

                        <TextView
                            android:id="@+id/DescEvaluation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="5pt"
                            android:layout_marginHorizontal="5pt"
                            android:textAlignment="center"
                            android:layout_marginBottom="5pt"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />

                        <Button
                            android:id="@+id/StartEvaluation"
                            android:layout_width="50pt"
                            android:layout_height="18pt"
                            android:layout_marginBottom="2pt"
                            android:text="START"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:backgroundTint="#F58A82"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>