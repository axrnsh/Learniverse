<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryTaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="22dp" >

        <TextView
            android:id="@+id/txtStoryReading"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STORY READING" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputSearchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="Search Title..." />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fantasy"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtFantasy"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Fantasy" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mystery"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtMystery"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Mystery" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/poetry"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtPoetry"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Poetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/education"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtEducation"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Fantasy" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>