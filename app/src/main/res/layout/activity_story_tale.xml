<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/story_reading"
    tools:context=".StoryTaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="22dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="5dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginRight="70dp"
                android:layout_weight="1"
                android:src="@drawable/back_button" />

            <TextView
                android:id="@+id/txtVocabCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Story Reading"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputSearchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="Search Title..." />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fantasy"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtFantasy"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Fantasy" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mystery"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtMystery"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Mystery" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/poetry"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtPoetry"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Poetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/education"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtEducation"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Fantasy" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>